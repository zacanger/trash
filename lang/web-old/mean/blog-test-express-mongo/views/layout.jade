doctype html
head
  title bloggy blog (blog)
  link(href='/stylesheets/reset.css',rel='stylesheet')
  link(href='/stylesheets/style.css',rel='stylesheet')
  script#pagen_script
  script(src='/javascripts/main.js')
  script(src="/javascripts/nicEdit.js", type="text/javascript")
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
  script(type='text/javascript')
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=388558531205027";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

body
  #header
    h1 bloggy (blog)
  #content
    #sidebar
      ul
        li
          a(href='/home') Home
        li
          a(href='/about') About
        li
          a(href='/contact') Contact
        if(admin == false)
          - null
        else
          br
          #adminTools(style='padding:5px;border--radius:5px;')
            h1(style='font-size:30px;color:#444;border-bottom:2px solid #aaa') Admin Tools:
            ul
              li
                a(href="/admin/new") New
              li
                a(href="/admin/delete") Delete
              li
                a(href="/admin/logout") Logout
      br
      br
      if(typeof posts == 'undefined')
          a(href='/home') Back to home
      else
        if(posts.length == 0)
          - null
        else
          .widget
            h1(style='font-size:120%;color:#444;font-family:helvetica;') Recent Posts
            br
            pre
            for post in posts
              table(id='post_table', style='padding-top:10px;')
                tr
                  td
                    #left
                      label(style='font-size: 130%;') -&nbsp&nbsp
                  td
                    #right
                      a(href='/home/#{post._id}', style='font-size: 130%;')=  post.title
                tr(style='height:10px;')

    #main
      block content

  #footer
    p copyright somthing sometime
