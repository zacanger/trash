<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>to do list</title>
  <style type="text/css">
    html {
      height: 100%;
      width: 100%;
      margin: 0;
      padding: 0;
      font-size: 62.5%;
    }

    body {
      font-size: 1.5em;
      line-height: 1.6;
      font-weight: 400;
      font-family: "Fantasque Sans Mono", "Menlo", "Monaco", monospace;
      color: #303330;
      background: #E3E3DE;
      padding: 4rem;
      max-width: 60rem;
      margin-left: 10rem;
    }

    h3 {
      font-size: 3.2rem;
      line-height: 1.3;
      letter-spacing: -.1rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }

    input,textarea,select { font-size: 110%; line-height: 1.1; }

    @media (min-width: 550px) { h3 { font-size: 2.2rem; }}

    a { color: #71A397; }
    a:hover { color: #89D470; }

    ul { list-style: circle inside; }
    ul { padding-left: 1rem; margin-top: 0; }
    ul ul { margin: 1.5rem 0 1.5rem 3rem; font-size: 80%; }
    li { margin-bottom: 1rem; }
    p { margin-top: 1rem; }
    p,ul { margin-bottom: 1.5rem; }
  </style>
</head>

<body>
  <h3>to do list</h3>
  <ul>
    <% todolist.forEach((todo, index) => { %>
      <li><a href="/todo/delete<%= index %>">âœ–</a> <%= todo %></li>
    <% }) %>
  </ul>

  <form action="/todo/add/" method="post">
    <p>
      <label for="newtodo">new item?</label>
      <input type="text" name="newtodo" id="newtodo" autofocus>
      <input type="submit">
    </p>
  </form>
</body>
</html>
