html, body
  height 100%
  width 100%
  margin 0
  padding 0
  background #202020
  font-family 'Fantasque Sans Mono', monospace
  overflow visible
  color #ededed
  line-height 1.2rem

.clear
  clear both
  height 0
  width 0
  padding 0
  margin 0

#header
  width 100%
  height 100px
  font-size 1.4rem

.logo
  margin 10px 0 0 17px
  display inline-block
  width 100%

#nav-bar
  list-style: none
  height 28px
  width 100%
  background-color #aca
  color #101010
  overflow hidden

.nav-item
  float left
  margin 3px 4% 0 5%
  font-size 1.4rem
  background-color #aca
  border-radius 2px
  width 200px
  text-align center
  cursor pointer
  color #101010

  a
    text-decoration none
    color #101010

.nav-item:first-child
  margin-left 8%

.nav-item:hover
  background-color #beb
  color #303030

#profile-container
  height 95px
  width 36px
  position fixed
  left 0
  top 12%

#profile-links
  list-style none
  font-size 1.8rem
  line-height 3.2

  i
    color #beb

  .github:hover
    color #aeb

  .linkedin:hover
    color #aeb

  .twitter:hover
    color #aeb

.wrapper
  width 40%
  margin 3% auto

.post-container
  width 100%
  font-size 1.2rem

