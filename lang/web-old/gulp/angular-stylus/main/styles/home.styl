html, body
	height 100%
	width 100%
	margin 0
	padding 0
	background-color #fff4e6
	font-family 'Merriweather', serif
	overflow visible
	color black
	line-height 1.6em

.clear
	clear both
	height 0
	width 0
	padding 0
	margin 0

#header
	width 100%
	height 100px
	font-size 1.4em

.logo
	margin 10px 0 0 17px
	display inline-block
	width 100%

#nav-bar
	list-style: none
	height 28px
	width 100%
	background-color #854442
	overflow hidden

.nav-item
	float left
	margin 3px 4% 0 5%
	font-size .8em
	background-color #854442
	border-radius 2px
	width 200px
	text-align center
	cursor pointer
	color #fff4e6

	a
		text-decoration none
		color black

.nav-item:first-child
	margin-left 8%

.nav-item:hover
	background-color #be9b7b
	color black

#profile-container
	height 95px
	width 36px
	position fixed
	left 0
	top 12%

#profile-links
	list-style none

	i
		color black

	.github:hover
		color #4078C0

	.linkedin:hover
		color #0077b5

	.twitter:hover
		color #55ACEE

.wrapper
	width 40%
	margin 3% auto

.post-container
	width 100%
